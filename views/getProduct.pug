extends base
block Indexcss
block content
block header
block footer
    
    script.
        fbq('track', 'ViewContent');

    section
        .container
            .text-center
                img(src='#')
                h2(style='color: black; margin-top: 80px;') You&apos;re 100% safe when you Buy with Rirapay

    section
        .form-container.mt-5(style = 'marging-top: 30px; margin-bottom: 200px;')
            h4#form-heading.mx-2
                | Place Order for your 
                b=product.productName 
            .card.border-0.box-shadow-1
                form.cart-details
                    .row.mx-2.mx-lg-4.pb-5
                        -const productprice = product.price.toLocaleString()
                        if (product.additionalInfo)
                            .col-12.mx-2.my-3
                                    p
                                        b Aditional Information: 
                                        =product.additionalInfo 
                        .col-12.my-2
                            p.mt-4.mb-0.mx-2(style = 'font-size: 1.2rem; font-weight: 400;') Price:
                            input#first_price.readonly.mx-2.mb-3(type='text', readonly value=`₦${productprice}` style= 'border: none; width: fit-content; font-size: 1.5rem; font-weight: 600;')
                            input#price.readonly(type='hidden', readonly value=`${product.price}`)         
                        .col-12.my-2
                            p.my-2.mb-0.mx-2(style = 'font-size: 1.2rem; font-weight: 400;') How many Pcs? 
                            //- span
                            //-     button#subtract(type = 'button') -
                            input#quantity.form-control.my-2.mx-2(type='number', value=`1` min='1' minlenght='1' required='' style= 'width: 30%; display: inherit;')
                            //- span
                            //-     button#add(type = 'button') +
                            medium.form-text.mt-2.mb-3.mx-1
                                | (Type how many Quantity you want)
                        .col-12.my-2
                            p.my-2.mb-0.mx-2(style = 'font-size: 1.2rem; font-weight: 500;') Total
                            input#total.readonly.font-weight-bold.mx-2(type='text', readonly value=`₦${productprice}` style= 'border: none; width: fit-content; font-size: 1.5rem; font-weight: bold;')
                    .text-center
                        input#submitlinkinput(type='hidden', value=`${product.id}/${businessUser.id}`)
                        button#checkout1-button.btn.btn-lg.mt-3.mb-5( type='submit') Continue