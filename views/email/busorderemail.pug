extends baseEmail

block content
  p Hi #{businessName},
  p= `You've recieved a new  ${productName} order with OrderId: ${orderNum}.`

  p 
    b These are the Order Details:
    .inline-list
      -const newtotal = total.toLocaleString()
    
      if (price > 0) 
        -var newprice = price.toLocaleString()
      else
        -var newprice = newtotal;
   
      ul
        b Customer Info:
        li Name: #{orderName}
        li Phone Number: #{phone}
        if(altPhone)
          li AltPhone: #{altPhone}
        else
          li AltPhone: none

      ul 
        b Delivery Address:
        li #{address}, #{area}, #{state}, Nigeria

      ul
        b Order details:
        li Product price: ₦#{newprice}
        li quantity: #{quantity}
        if (colour)
          li Colour: #{colour}
        if (size)
          li Size: #{size}
        li 
          b Total: ₦#{newtotal}

  p
    b View your order on your Dashboard
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Go to your Dashboard
  p
    b Thank you for choosing RiraPay!