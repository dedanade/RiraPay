extends baseEmail

block content
  p Hi #{orderName},
  p You've created a new #{productName} order with OrderId: #{orderNum}.

  .inline-list
    -const newtotal = total.toLocaleString()
    -const newprice = price.toLocaleString()

    p 
      b These are the Order Details:
    
    ul
      b Customer Info:
      li Name: #{orderName}
      li Phone: #{phone}
      if(altPhone)
        li AltPhone: #{altPhone}
      else
        li AltPhone: none

    ul
      b Delivery Address:
      li #{address}, #{area}, #{state}, Nigeria
    ul
      b Order details:
      li product price: ₦#{newprice}
      li quanity: #{quantity}
      li 
        b Total: ₦#{newtotal}

  if(discount) 
    p
      b If you pay for your order through rirapay, you enjoy #{discount}% discount. Click on the button below to quickly claim the discount

    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
      tbody
        tr
          td(align='left')
            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
              tbody
                tr
                  td
                      a(href=`${url}`, target='_blank') Claim Discount Now
  else
    p
      b Click the button below to pay through RiraPay

    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
      tbody
        tr
          td(align='left')
            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
              tbody
                tr
                  td
                      a(href=`${url}`, target='_blank') Pay Now
  p
    b Thank you for choosing RiraPay!