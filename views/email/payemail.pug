extends baseEmail

block content
  p Hi #{orderName},
  p= `Congratulations! You've made payment for your orderId: ${orderNum}.`

  p 
    b These are the Order Details:
    .inline-list
      
      if (price > 0)
        -var newprice = price.toLocaleString()
        -var newdiscount = (discount/100) * total
        -var discountPrice = (total - newdiscount).toLocaleString()
      else
        -var newprice = total.toLocaleString()
        -var newdiscount = (discount/100) * total
        -var discountPrice = (total - newdiscount).toLocaleString()  
      ul
        b Customer Info:
        li Name: #{orderName}
        li Phone Number: #{phone}
        if(altPhone)
          li AltPhone: #{altPhone}
        else
          li AltPhone: none

      ul 
        b Delivery Address:
        li #{address}, #{area}, #{state}, Nigeria

      ul
        b Order details:
        li Product price: ₦#{newprice}
        li quantity: #{quantity}
        if (colour)
          li Colour: #{colour}
        if (size)
          li Size: #{size}
        if (discount > 0)
            li discount: #{discount}%
        li 
          b Total: ₦#{discountPrice}
    
    p 
    b What's Next?
    p The merchant has 48 hours to ship the item. if not shipped after 48 hours, kindly contact us to get a refund instantly. Check your dashboard to learn more
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Go to your Dashboard
  p
    b Thank you for choosing RiraPay!