extends base
block Indexcss
block script
block content
block header
block footer

      section
        .container
          .text-center
            img(src='#', style='margin-top: 10px; padding-bottom: 30px;')
            h1.header-signup-business Open a RiraPay Personal Account
      section
        .form-container
          .row.no-gutters
            .col-12
              .card-wrap
                form.signup-form
                  .row.mx-1.py-2
                    .col
                      label(for='inputfirstname') First Name
                      input#inputfirstname.form-control(type='text', placeholder='First Name' required='')
                  .row.mx-1.py-2
                    .col
                      label(for='inputlastname') Last Name
                      input#inputlastname.form-control(type='text', placeholder='Last Name' required='')
                  .row.mx-1.py-2
                    .col
                      label(for='inputemail') Email Address
                      input#inputemail.form-control(type='email', placeholder='eg: daboy@gmail.com' required='')
                  .row.mx-1.py-2
                    .col
                      div
                        label(for='inputphonenumber') Phone Number
                        .input-group
                          .input-group-prepend
                          .input-group-text +234
                          input#inputphonenumber.form-control(type='tel', placeholder='7066514541' maxlength= '11' minlength= '11' required='')
                  .row.mx-1.py-2
                    .col
                      .password-wrap
                        label(for='inputpassword') Password
                        input#inputpassword.form-control(type='password', placeholder='Password' minlength= '6' required='')
                        span.fa.fa-fw.fa-eye.view-password-icon.toggle-password(toggle='#inputpassword')
                  .row.mx-1.py-3
                    .col.ms-2.py-2
                      .text-center
                        button#sign-up-button.btn.btn-lg(type='submit' style='width: 85%;') Create My Account 
                      
                      p.mx-3.text-center(style='font-size: 1rem;')
                        | By clicking the &ldquo;Create My Account&rdquo; button, you agree to RiraPay&apos;s 
                        a(href='#') Terms and Conditions
                      .form-group.form-check
                  .row.mx-1.py-3.text-center
                    .col
                      p.mx-1.py-2(style='font-size: .9rem;')
                        | Already have an Account? 
                        a(href='/login') Login
